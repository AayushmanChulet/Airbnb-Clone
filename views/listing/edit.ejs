<% layout('/layout/boilerplate') -%>

<body>
    <h3>Edit id : <%= user._id %> </h3>
    <form action="/listings/<%= user._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <div class="mb3">
                    <label for="title" class="form-label">Enter the title: </label>
                    <input type="text" id="title" class="form-control" name = "listing[title]" value ="<%= user.title %>" required><br>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                <div class="mb3">
                    <label for="location" class="form-label">Enter the location: </label>
                    <input type="text" id="location" class="form-control" name = "listing[location]" value ="<%= user.location %>" required><br>
                    <div class="valid-feedback">location looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                <div class="row">
                    <div class="mb3 col-4">
                        <label for="price" class="form-label">Enter the price: </label>
                        <input type="number" id="price" class="form-control" name = "listing[price]" value ="<%= user.price %>" required><br>
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback"> Enter valid title</div>
                    </div>
                    <div class="mb3 col-8">
                        <label for="country" class="form-label">Enter the country: </label>
                        <input type="text" id="country" class="form-control" name = "listing[country]" value ="<%= user.country %>" required><br>
                        <div class="valid-feedback">Country looks good!</div>
                        <div class="invalid-feedback"> Enter valid title</div>
                    </div>
                </div>
                <div>
                    <img src="<%= originalUrl %>" alt="Last posted image">
                </div>
                <div class="mb3">
                    <label for="image" class="form-label">Upload image: </label>
                    <input type="file" id="image" name = "listing[image]" class="form-control" ><br>
                    <div class="valid-feedback">imgage url looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                <div class="mb3">
                    <label for="description" class="form-label"> describe the area: </label>
                    <textarea name="listing[description]" id="description" class="form-control" cols="15" rows="3" required><%= user.description %></textarea><br>
                    <div class="valid-feedback">description looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                    <button class="btn btn-dark edit-btn mt-3 btn-submit" >Submit</button>
            </div>
        </div>
    </form>
</body>
