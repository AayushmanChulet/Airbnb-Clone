<% layout('/layout/boilerplate') -%>

<body>
    <h3>Enter the details:- </h3>
    <form action="/listings/new" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <div class="mb3">
                    <label for="title" class="form-label">Enter the title: </label>
                    <input type="text" id="title" name = "listing[title]" placeholder ="Type here!" class="form-control" required><br>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                <div class="mb3">
                    <label for="location" class="form-label">Enter the location: </label>
                    <input type="text" id="location" name = "listing[location]" placeholder ="Type here!" class="form-control" required> <br>
                    <div class="valid-feedback">location looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                <div class="row">
                    <div class="mb3 col-md-4">
                        <label for="price" class="form-label">Enter the price: </label>
                        <input type="number" id="price" name = "listing[price]" placeholder ="Type here!" class="form-control" required><br>
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback"> Enter valid title</div>
                    </div>
                    <div class="mb3 col-md-8">
                        <label for="country" class="form-label ">Enter the country: </label>
                        <input type="text" id="country" name = "listing[country]" placeholder ="Type here!" class="form-control"required><br>
                        <div class="valid-feedback">Country looks good!</div>
                        <div class="invalid-feedback"> Enter valid title</div>
                    </div>
                </div>
                
                
                <div class="mb3">
                    <label for="image" class="form-label">Upload image: </label>
                    <input type="file" id="image" name = "listing[image]" class="form-control" required><br>
                    <div class="valid-feedback">imgage url looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                <div class="mb3">
                    <label for="description" class="form-label"> describe the area: </label>
                    <textarea name="listing[description]" id="description" cols="15" rows="3" placeholder="Type here" class="form-control"  required></textarea><br>
                    <div class="valid-feedback">description looks good!</div>
                    <div class="invalid-feedback"> Enter valid title</div>
                </div>
                <button class="btn btn-dark add-btn mt-3 btn-submit">Submit</button>
            </div>
        </div>
    </form>
</body>